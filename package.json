{
  "name": "chatbot",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start": "docker compose up",
    "prod": "NODE_ENV=production node --loader @swc-node/register/esm src/server/main.ts",
    "dev": "NODE_ENV=development concurrently \"nodemon --exec node --loader @swc-node/register/esm src/server/main.ts\" \"vite\"",
    "build": "tsc && vite build",
    "db": "docker exec -it chatbot_db psql -U postgres",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "eslint",
    "*.{ts,tsx,json,md}": "prettier --write"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.8",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.19",
    "@tanstack/react-query": "^5.12.1",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "i18next": "^23.7.7",
    "morgan": "^1.10.0",
    "openai": "^4.20.1",
    "pg": "^8.11.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.5.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.20.1",
    "remark-gfm": "^4.0.0",
    "sequelize": "^6.35.1",
    "umzug": "^3.4.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@swc-node/register": "^1.6.8",
    "@tanstack/react-query-devtools": "^5.12.1",
    "@tsconfig/node20": "^20.1.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "husky": "^8.0.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "prettier": "3.2.5",
    "typescript": "^5.2.2",
    "vite": "^5.2.8"
  }
}
